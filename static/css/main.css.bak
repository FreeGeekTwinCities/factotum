/* our logo font is Monofur: http://eurofurence.net/monofur.html ; font-face generated by http://fontface.codeandmore.com/ */

@font-face {
    font-family: 'Monofur';
    src: url('monof55.eot');
    src: url('monof55.eot?#iefix') format('embedded-opentype'),
         url('monof55.woff') format('woff'),
         url('monof55.ttf') format('truetype'),
         url('monof55.svg#monof55') format('svg');
    font-weight: normal;
    font-style: normal;
}

@media all {

    body {
      font-family:sans-serif;
      padding:4px;
    }
    
    /*the following gives "zebra-striped" tables, based on http://www.cssnewbie.com/styling-zebra-striped-tables-with-css/ */
    tr.odd {background-color: #F0F0F0;}
    td {border-top: 2px solid LightGray;}
    th {background-color: White}
    
    div.logo {
        font-family:Monofur, monospace;
        font-size:2em;
        /* color:white; */
        /* background-color:black; */
        width:200px;
        padding:10px;
        margin:0px;
        text-transform:uppercase;
        text-align:center;
        float:left;
        border:5px solid black;
    }

    div.receipt-header {
        font-family:Monofur, monospace;
        font-size:2em;
        /* color:white; */
        /* background-color:black; */
        text-transform:uppercase;
        text-align:center;
        float:right;
        padding:20px;
        font-weight:bold;
        border:5px solid black;
    }
         
    p {
        clear:both;
        padding:20px;
    }

    table {
        border-style:double;
        border-width:5px;
        vertical-align:middle;
        width:80%;
    }
    
    div.errors {
        color:red;
    }

}
